conda create -n XICRA_test_pip mamba
conda create -n XICRA_test_pip -c conda-forge mamba
conda activate XICRA_test_pip
mamba install -y -c bioconda -c defaults -c r -c conda-forge fastqc mirtop optimir star fastq-join subread matplotlib

sh XICRA_pip/XICRA/config/software/installer.sh

